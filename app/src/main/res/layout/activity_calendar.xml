<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".CalendarActivity">
    <com.github.sundeepk.compactcalendarview.CompactCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/compactcalendar_view"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:compactCalendarBackgroundColor="@color/colorPrimary"
        app:compactCalendarCurrentDayBackgroundColor="#D4ADFF"
        app:compactCalendarCurrentDayIndicatorStyle="fill_large_indicator"
        app:compactCalendarCurrentSelectedDayBackgroundColor="@color/colorAccent"
        app:compactCalendarCurrentSelectedDayTextColor="#585858"
        app:compactCalendarEventIndicatorStyle="small_indicator"
        app:compactCalendarOtherMonthDaysTextColor="#FFFFFF"
        app:compactCalendarShouldSelectFirstDayOfMonthOnScroll="true"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextColor="@color/whiteText"
        app:compactCalendarTextSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </com.github.sundeepk.compactcalendarview.CompactCalendarView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:layout_below="@id/compactcalendar_view" />
    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_above="@+id/sv_container"
        android:layout_below="@id/guideline"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        tools:text="@string/user_email_placeholder"
        android:textColor="@color/whiteText"
        android:textSize="14sp" />
    <ImageButton
        android:id="@+id/btn_arrow"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@id/guideline"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/open_close_calendar"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp"
        android:textSize="24sp" />
    <ScrollView
        android:id="@+id/sv_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_arrow">
        <LinearLayout
            android:id="@+id/ll_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/whiteText"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:textAlignment="center"
                    android:textColor="@color/whiteText"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    tools:text="05 may 1999"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/whiteText"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_list_title"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:textAlignment="textStart"
                android:textColor="@color/whiteText"
                android:layout_marginBottom="8dp"
                android:textSize="17sp"
                tools:text="Exercises completed: "/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_calendarlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/list_item_calendar"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_workoutnotes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="top"
                    android:lines="5"
                    android:textSize="17sp"
                    android:layout_gravity="bottom"
                    android:textAlignment="center"
                    android:textColor="@color/whiteText"
                    tools:text="@string/exercise_notes"/>
                <ImageButton
                    android:id="@+id/btn_editnote"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_mode_edit"
                    android:contentDescription="@string/edit_workout_notes"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:scaleType="fitXY"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:tint="#585858"
        android:clickable="true"
        android:contentDescription="@string/fab_log_exercise"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@android:drawable/ic_input_add" />
</RelativeLayout>